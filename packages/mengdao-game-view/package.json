{
  "name": "mengdao-game-view",
  "version": "1.0.0",
  "description": "Game view application built with Vue 3, TypeScript, Pinia, and Router",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "build:dev": "vue-tsc && vite build --mode development",
    "build:prod": "vue-tsc && vite build --mode production",
    "build:analyze": "cross-env VITE_BUILD_ANALYZE=true vue-tsc && vite build --mode production",
    "build:no-check": "vite build --mode production",
    "build:dev-no-check": "vite build --mode development",
    "preview": "vite preview",
    "preview:dist": "vite preview --port 4173",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write \"src/**/*.{vue,ts,js,scss,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{vue,ts,js,scss,css,json}\"",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.0",
    "axios": "^1.11.0",
    "element-plus": "^2.4.0",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.5.0",
    "autoprefixer": "^10.4.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^9.19.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.90.0",
    "tailwindcss": "^3.3.0",
    "terser": "^5.43.1",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^1.2.1",
    "vue-tsc": "^3.0.6"
  }
}
